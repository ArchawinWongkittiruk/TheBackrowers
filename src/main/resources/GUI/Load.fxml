<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loadRoot" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="116.0" prefWidth="600.0" stylesheets="@../Styling/GUI.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoadController">
   <children>
      <Button fx:id="uploadButton" alignment="CENTER" mnemonicParsing="false" onAction="#chooseFile" text="Upload File">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <TextArea fx:id="dragTarget" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onDragDropped="#handleDrop" onDragOver="#handleDragOver" promptText="Drop file here..." stylesheets="@../Styling/GUI.css" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      <Label fx:id="selectedFileLabel" alignment="CENTER" prefHeight="17.0" prefWidth="314.0" text="Selected File: " />
   </children>
</VBox>
