<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loadRoot" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="900.0" stylesheets="@../Styling/GUI.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MultipleLoadController">
   <children>
      <Button fx:id="uploadButton" alignment="CENTER" mnemonicParsing="false" onAction="#uploadFiles" text="Upload Files">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <HBox alignment="CENTER" minWidth="-Infinity" prefHeight="434.0" prefWidth="660.0">
         <children>
            <VBox prefHeight="434.0" prefWidth="330.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="314.0" text="Drop Files Here" />
                  <ListView fx:id="uploadTable" onDragDropped="#handleDrop" onDragOver="#handleDragOver" prefHeight="415.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="434.0" prefWidth="202.0">
               <children>
                  <Button fx:id="selectedFiles" mnemonicParsing="false" onAction="#selectFiles" prefHeight="26.0" prefWidth="204.0" text="Select Files" />
                  <Button mnemonicParsing="false" onAction="#unselectFiles" prefHeight="26.0" prefWidth="222.0" text="Unselect Files" />
               </children>
            </VBox>
            <VBox prefHeight="434.0" prefWidth="330.0">
               <children>
                  <Label alignment="CENTER" prefHeight="10.0" prefWidth="350.0" text="Selected File: " />
                  <ListView fx:id="selectedTable" prefHeight="418.0" prefWidth="100.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
