<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="outputRoot" prefHeight="600.0" prefWidth="900.0" stylesheets="@../Styling/GUI.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoggerController">
   <children>
      <TextArea fx:id="displayLog" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="522.0" prefWidth="879.0" VBox.vgrow="ALWAYS" />
      <BorderPane>
         <center>
            <Label prefHeight="22.0" prefWidth="66.0" text="Log page" BorderPane.alignment="CENTER" />
         </center>
         <left>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearTextField" prefHeight="26.0" prefWidth="78.0" text="Clear" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveFileToDir" prefHeight="26.0" prefWidth="78.0" text="Save" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
